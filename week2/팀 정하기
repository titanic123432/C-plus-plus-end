#include <iostream>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) 
{
	long long N,M,i; // N = N명의 학생, M = M개의 팀 
	scanf("%lld %lld %lld", &N,&M,&i);
	if(N / M == (i - 1) / M)
	{
		printf("0");
	}
	else printf("%lld", (i - 1) % M + 1);
	return 0; 
}
